<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <title><%= h(@title || "Untitled")  %> | TheStockFactor.com</title>
    <%= stylesheet_link_tag 'application' %>
    <% if @javascript_includes %>
        <% for js_file in @javascript_includes %>
            <%= javascript_include_tag js_file %>
        <% end %>
    <% end %>
    <%= yield(:head) %>
    <script type="text/javascript">

  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-10324101-10']);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();

</script>
  </head>
  <body>
    <div id="header"><span id="title"><a style="text-decoration:none;color:white" href="/">The Stock Factor</a></span><span class="title-link"><a target="_blank" href="https://twitter.com/thestockfactor">twitter</a><a href="mailto:thestockfactor@gmail.com">email us</a><span> </div>
    <div id="container">
      <%- flash.each do |name, msg| -%>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <%- end -%>
      
      <%- if show_title? -%>
        <h1><%=h yield(:title) %></h1>
      <%- end -%>
      
      <%= yield %>
    </div>

  </body>
</html>
